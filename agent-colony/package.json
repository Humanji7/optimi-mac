{
  "name": "agent-colony",
  "version": "0.1.0",
  "description": "AI Agent Colony Visual Management Interface",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:vite\" \"pnpm dev:main\" \"pnpm dev:electron\"",
    "dev:vite": "vite",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc -p tsconfig.main.json && echo '{\"type\":\"commonjs\"}' > dist/main/package.json && vite build",
    "build:main": "tsc -p tsconfig.main.json && echo '{\"type\":\"commonjs\"}' > dist/main/package.json",
    "preview": "pnpm build && electron .",
    "type-check": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "agent-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@pixi/react": "^8.0.5",
    "better-sqlite3": "^12.6.2",
    "pixi.js": "^8.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.3",
    "vite": "^6.0.6",
    "wait-on": "^9.0.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "better-sqlite3"
    ]
  },
  "build": {
    "appId": "com.agent-colony.app",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
